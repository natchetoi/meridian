<article{{ attributes.addClass(classes) }}>
  <div class="row">
    <div class="col-lg-8">
      {% if video|render %}
        {{ video }}
      {% endif %}
    </div>
    <div class="col-lg-4">

      {% trans %}
        <div class="promoted-label mt-style-custom-all">Promoted</div>
      {% endtrans %}

      {% if display_submitted or pre_content_second|render %}
        <div class="node__meta ms-2">
          {% if display_submitted %}
            <span class="node__meta-item">
              {{ pre_content_first }}
            </span>
          {% endif %}
          {% if pre_content_second|render %}
            <div class="node__meta-item node__meta-tags">
              {{ pre_content_second }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {{ title_prefix }}
      {% if not page %}
        <h2{{ title_attributes.addClass("mt-0 node__title") }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}
      {{ title_suffix }}

      {% if rendered_content|render %}
        <div {{ content_attributes.addClass('node__content') }}>
          {{ rendered_content }}
        </div>
      {% endif %}

      {% if display_submitted %}
        <div class="node__meta">
          {{ author_picture }}
          <span{{ author_attributes.addClass('node__submitted') }}>
            {{ author_name }}
            {{ metadata }}
          </span>
        </div>
      {% endif %}
    </div>

  </div>
</article>
