{#
/**
 * @file
 * Base+'s theme implementation to display an Article node in teaser view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    display_submitted ? 'node--display-submitted',
    'clearfix',
  ]
%}
{{ attach_library('baseplus/node-view-mode-teaser') }}
{{ attach_library('baseplus/node-field') }}
{% set image = content.field_image %}
{% set teaser_pre_content = content.field_tags %}
{% set rendered_content = content|without('field_image', 'field_tags') %}
{% include '@baseplus/partials/_mt-teaser-2.html.twig' %}
